<%- include('../../fragments/header.ejs') %>
<main>
    <script type="application/javascript" src="/js/validationFormProf.js"></script>
    <h2><%= pageTitle %></h2>
    <form class="form" method="post" action="<%= formAction %>" novalidate onsubmit="return validationForm();">

        <input type="hidden" name="_id" value="<%= prof._id %>">


        <label for="firstName">Imię: <span class="symbol-required">*</span></label>
        <input type="text" name="firstName" id="firstName" placeholder="np. Jan" value="<%= prof.firstName %>"
                <%= (formMode === 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorFirstName" class="errors-text"></span>

        <label for="lastName">Nazwisko: <span class="symbol-required">*</span></label>
        <input type="text" name="lastName" id="lastName" placeholder="np. Kowalski" value="<%= prof.lastName %>"
                <%= (formMode === 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorLastName" class="errors-text"></span>

        <label for="email">E-mail: <span class="symbol-required">*</span>
            <span class="symbol-required"></span></label>
        <input type="text" name="email" id="email" placeholder="imie.nazwisko@utoronto.com" value="<%= prof.email %>"
                <%= (formMode === 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorEmail" class="errors-text"></span>

        <!--<label>Specjalizacja:</label>
        <div class="container">
            <input type="checkbox" id="specialization1" name="specialization1" value="math">
            <label for="specialization1">Matematyka</label><br/>
            <input type="checkbox" id="specialization2" name="specialization2" value="physics">
            <label for="specialization2">Fizyka</label><br/>
            <input type="checkbox" id="specialization3" name="specialization3" value="informatics">
            <label for="specialization3">Informatyka</label><br/>
        </div>
        <span id="errorSpecialization" class="errors-text"></span>-->

        <% if (formMode !== 'showDetails') { %>
            <div class="form-buttons">
            </div>
        <% } %>

        <% if (formMode === 'showDetails') { %>
            <div class="form-buttons">
                <a href="/professors/edit/<%= prof._id %> " class="form-button-edit">Edytuj</a>
            </div>
        <% } %>
        <div class="form-buttons">
            <span class="errors-text" id="errorsSummary"></span>
            <% if (formMode !== 'showDetails') { %>
                <input class="form-button-submit" type="submit" value="<%= btnLabel %>"/>
                <a class="form-button-cancel" href="/professors">Anuluj</a>
            <% } else { %>
                <a class="form-button-cancel" href="/professors">Powrót</a>
            <% } %>
        </div>
    </form>
    <% if (formMode === 'showDetails' || formMode === 'edit') { %>


        <h2>Wykłady profesora</h2>

        <table class="table-list">
            <thead>
            <tr>
                <th>Nazwa</th>
                <th>Data rozpoczęcia</th>
                <th>Data zakończenia</th>
                <th>Długość</th>
                <th>Opcje</th>
            </tr>
            </thead>
            <tbody>
            <% for (let l of prof.lectures) { %>
                <tr>
                    <td><%= l.name %></td>
                    <td><%= l.dateFrom %></td>
                    <td><%= l.dateTo %></td>
                    <td><%= l.duration %></td>
                    <td>
                        <ul class="list-actions">
                            <li>
                                <a href="/lectures/details/<%= l._id %>"
                                   class="list-actions-button-details">Szczegóły</a>
                            </li>
                            <li>
                                <a href="/lectures/delete/<%= l._id %>" class="list-actions-button-delete"
                                   onclick="return confirm('Are you sure?')">Usuń</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    <% } %>

</main>
<%- include('../../fragments/footer.ejs') %>